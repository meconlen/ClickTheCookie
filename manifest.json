{
  "manifest_version": 2,
  "name": "Click the Cookie",
  "version": "1.2.0",
  "description": "Cookie Clicker extension with auto-clicker and building efficiency display",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://orteil.dashnet.org/cookieclicker/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Click the Cookie",
    "default_icon": "icons/icon-20.png"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "web_accessible_resources": [
    "injected-script.js"
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "19": "icons/icon-19.png",
    "32": "icons/icon-32.png",
    "38": "icons/icon-38.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "click-the-cookie-toolbar@example.com",
      "strict_min_version": "48.0"
    }
  }
}
